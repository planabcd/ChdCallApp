<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:orientation="vertical"
    android:background="@color/result_minor_text" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/s_search_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="主页"
                android:textColor="@color/black_color"
                android:textSize="20sp" />
        </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_start_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/usermainpage_bg_center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            >
            <ImageView
                android:id="@+id/iv_call"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/s_chat_group3"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/tv_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_call"
                android:text="开始点名"
                android:textSize="16sp"
                android:textColor="#202020"

                />
            <ImageView
                android:id="@+id/iv_call_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="matrix"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/mm_submenu" />



        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_kq"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/usermainpage_bg_center"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        >
        <ImageView
            android:id="@+id/iv_attence"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/s_contact_icon_search_50"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/tv_attence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_attence"
            android:text="考勤记录"
            android:textSize="16sp"
            android:textColor="#202020"

            />
        <ImageView
            android:id="@+id/iv_attence_attence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:scaleType="matrix"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/mm_submenu" />



    </RelativeLayout>

</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/usermainpage_bg_center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            >
            <ImageView
                android:id="@+id/iv_person"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/s_add_contact_pbook"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/tv_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_person"
                android:text="个人信息"
                android:textSize="16sp"
                android:textColor="#202020"

                />
            <ImageView
                android:id="@+id/iv_person_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="matrix"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/mm_submenu" />



        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_er"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/usermainpage_bg_center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            >
            <ImageView
                android:id="@+id/iv_class"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_discover_scan_qcode"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/tv_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_class"
                android:text="生成考勤二维码"
                android:textSize="16sp"
                android:textColor="#202020"

                />
            <ImageView
                android:id="@+id/iv_class_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="matrix"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/mm_submenu" />



        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_loc"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/usermainpage_bg_center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            >
            <ImageView
                android:id="@+id/iv_loc"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_loc2"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/tv_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_loc"
                android:text="测试距离"
                android:textSize="16sp"
                android:textColor="#202020"

                />
            <ImageView
                android:id="@+id/iv_loc_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="matrix"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/mm_submenu" />



        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/usermainpage_bg_center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            >
            <ImageView
                android:id="@+id/iv_other"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_mine_setting"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/tv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_other"
                android:text="设置"
                android:textSize="16sp"
                android:textColor="#202020"

                />
            <ImageView
                android:id="@+id/iv_other_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:scaleType="matrix"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/mm_submenu" />



        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
